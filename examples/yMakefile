EXAMPLES = chkbay.py clmdiv.py cn01p.py cn02p.py cn05p.py cn12p.py cns01p.py \
	color1.py ctnccl.py geodesic.py irregular.py meteogram.py            \
	ngl01p.py ngl02p.py ngl03p.py ngl04p.py ngl05p.py ngl06p.py          \
	ngl07p.py ngl08p.py ngl09p.py ngl10p.py ngl11p.py panel1.py          \
	scatter1.py seam.py skewt1.py skewt2.py skewt3.py streamline.py      \
	topo1.py traj1.py legend.py labelbar.py wmbarb.py wmbarbmap.py       \
	gaus.py vinth2p.py multi_y.py contour_xyz.py vector_pop.py nio01.py  \
	natgrid1.py

RESFILES = chkbay.res cn12p.res ctnccl.res geodesic.res irregular.res \
	ngl08p.res ngl09p.res seam.res topo1.res streamline.res multi_y.res \
	vector_pop.res

ALL_FILES = $(EXAMPLES) $(RESFILES)

InstallTarget(pynglex,$(INSTALL_BIN),$(PYNGLBINPATH))
InstallTarget($(ALL_FILES),$(INSTALL_LIB),../src/pynglex)
InstallTarget($(ALL_FILES),$(INSTALL_LIB),$(PYNGLNCARGPATH)/$(PYNGLEXDIR))


install-doc: $(ALL_FILES)
	@if (test ! -d $(PYNGLWEBROOT)/examples); then ($(MKDIRHIER) $(PYNGLWEBROOT)/examples); else continue; fi
	@for name in $(ALL_FILES); do \
	(echo "Installing $$name";\
	$(INSTALL) -m $(INSTALL_LIB) $$name $(PYNGLWEBROOT)/examples); \
	done
