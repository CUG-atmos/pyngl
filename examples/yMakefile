EXAMPLES = chkbay.py clmdiv.py cn12p.py ctnccl.py meteogram.py geodesic.py \
	irregular.py ngl01p.py ngl02p.py ngl03p.py ngl04p.py ngl05p.py \
	ngl06p.py ngl07p.py ngl08p.py ngl09p.py ngl10p.py ngl11p.py \
	panel1.py topo1.py traj1.py scatter1.py seam.py streamline.py

RESFILES = chkbay.res cn12p.res ctnccl.res geodesic.res irregular.res \
	ngl08p.res ngl09p.res seam.res topo1.res streamline.res

InstallTarget(pynglex,$(INSTALL_BIN),$(BINPATH))
InstallTarget($(EXAMPLES),$(INSTALL_LIB),$(PYNGLEXROOT))
InstallTarget($(RESFILES),$(INSTALL_LIB),$(PYNGLEXROOT))

InstallTarget(pynglex,$(INSTALL_BIN),../src/bin)
InstallTarget($(EXAMPLES),$(INSTALL_LIB),../src/ncarg/pynglex)
InstallTarget($(RESFILES),$(INSTALL_LIB),../src/ncarg/pynglex)
