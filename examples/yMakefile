EXAMPLES = chkbay.py clmdiv.py cn01p.py cn02p.py cn12p.py cns01p.py \
	color1.py ctnccl.py geodesic.py irregular.py meteogram.py \
	ngl01p.py ngl02p.py ngl03p.py ngl04p.py ngl05p.py ngl06p.py \
	ngl07p.py ngl08p.py ngl09p.py ngl10p.py ngl11p.py panel1.py \
	scatter1.py seam.py skewt1.py skewt2.py skewt3.py streamline.py \
	topo1.py traj1.py legend.py labelbar.py wmbarb.py wmbarbmap.py

RESFILES = chkbay.res cn12p.res ctnccl.res geodesic.res irregular.res \
	ngl08p.res ngl09p.res seam.res topo1.res streamline.res

InstallTarget(pynglex,$(INSTALL_BIN),$(BINPATH))
InstallTarget($(EXAMPLES),$(INSTALL_LIB),$(PYNGLEXROOT))
InstallTarget($(RESFILES),$(INSTALL_LIB),$(PYNGLEXROOT))

InstallTarget(pynglex,$(INSTALL_BIN),../src/bin)
InstallTarget($(EXAMPLES),$(INSTALL_LIB),../src/ncarg/pynglex)
InstallTarget($(RESFILES),$(INSTALL_LIB),../src/ncarg/pynglex)

InstallTarget($(EXAMPLES),$(INSTALL_LIB),$(PYNGLWEBROOT)/examples)
InstallTarget($(RESFILES),$(INSTALL_LIB),$(PYNGLWEBROOT)/examples)

